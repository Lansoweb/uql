{
    "name" : "los/urlquery-db",
    "description" : "PHP library to transform url query into db partial queries",
    "license" : "MIT",
    "type" : "library",
    "homepage" : "https://github.com/lansoweb/urlquery-db",
    "authors" : [ {
        "name" : "Leandro Silva",
        "homepage" : "http://leandrosilva.info/"
    } ],
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "zendframework/zend-db": "^2.9",
        "zendframework/zend-coding-standard": "^1.0",
        "squizlabs/php_codesniffer": "^2.7",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.1",
        "zendframework/zend-diactoros": "^1.7",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload" : {
        "psr-4" : {
            "Los\\UrlQueryDb\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Los\\UrlQueryDbTests\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse -l max src",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
